[Unit]
Description=Golden Image First Boot Reset
Documentation=https://github.com/your-org/k8s-node-image
After=network-pre.target
Before=firstboot-hostname.service

[Service]
Type=oneshot
ExecStart=/opt/golden-image/firstboot-reset.sh
RemainAfterExit=no
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

